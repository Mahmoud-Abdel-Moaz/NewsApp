<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="1dp"
    android:layoutDirection="rtl"
    app:cardCornerRadius="20dp"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <ImageView
        android:id="@+id/img_news"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="@string/news_image_description"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher_round"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
      <de.hdodenhof.circleimageview.CircleImageView
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:id="@+id/img_source"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/default_news_img"
          app:civ_border_width="1dp"
          app:civ_border_color="@color/dark_gray"/>
      <View
          android:layout_width="5dp"
          android:layout_height="1dp"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical="10dp"
          android:orientation="vertical"
          >
        <TextView
            android:id="@+id/txt_source_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/source_name"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/txt_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/source_date"
            android:textColor="@color/dark_gray"
            android:textSize="10sp"
            />
      </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:ellipsize="end"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginBottom="35dp"
        />
  </LinearLayout>

</androidx.cardview.widget.CardView>